	</header>
	<div class="kongbai"></div>
	
	  <ul class="aui-list-view aui-grid-view" id="vinegarList">
     	<!--<li class="aui-list-view-cell aui-img aui-col-xs-6" onclick="openNewWin('productDetails')">
     		<img class="aui-img-object" src="../image/img.jpg">
     		<div class="aui-img-body">
     			精选富硒小米，源于晋北天然富硒米
     			<p class="price">￥<span>22.5</span></p>
     		</div>
     	</li>-->
     </ul>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/jquery-2.1.3.min.js"></script>
<script type="text/javascript" src="../script/index.js"></script>
<script type="text/javascript" src="../script/common.js"></script>
<script type="text/javascript">
	apiready = function(){
	 var ret=$api.getStorage('ret');
	 console.log(JSON.stringify(ret))
	  var list=ret.resultList, str="";
	 for(var i=0;i<list.length;i++){
	   var id=list[i].unit.id;
		if(id==2){
		var img = '<img class="aui-img-object" src='+list[i].img_url+' data='+list[i].img_url+'>'
				if(list[i].img_url==''){
				 img='<img class="aui-img-object"  src="../image/img.jpg" data='+list[i].img_url+'>'
				 }
		 str='<li class="aui-list-view-cell aui-img aui-col-xs-6 list" pid='+list[i].id+'>'+img+
									'<div class="aui-img-body" name='+list[i].title+'>'+
										list[i].title+'<br>'+
									'<p class="price" price='+list[i].price+'>￥'+list[i].price+'</p>'+
									'</div>'+
								'</li>'
		}			
	  	$('#vinegarList').append(str);
	  }
	  
	   $('#vinegarList').on('click', '.list', function(){
		  	var name=$(this).find('.aui-img-body').attr('name');
			var price=$(this).find('.price').attr('price');
			var image=$(this).find('.aui-img-object').attr('data');
			var id=$(this).attr('pid');
			api.openWin({
	            name: 'productDetails',
	            url: 'productDetails.html',
	            pageParam:{
	            	name:name,
	            	price:price,
	            	image:image,
	            	id:id
	            }
            });
	  })
	};
</script>
</html>